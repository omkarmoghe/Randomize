<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.randomize"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.randomize.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.randomize.NumberActivity"
            android:label="@string/title_activity_number" >
        </activity>
        <activity
            android:name="com.example.randomize.CoinActivity"
            android:label="@string/title_activity_coin" >
        </activity>
        <activity
            android:name="com.example.randomize.DiceActivity"
            android:label="@string/title_activity_dice" >
        </activity>
    </application>

</manifest>
